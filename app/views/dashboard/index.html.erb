<%= render "partials/nav" %>
<div class="center search">
  <button onclick="getLocation()" class="dark-text light-back button">Search Current Location</button>
</div>
<div class="budget_info">
  <% if @facade %>
    <h2>Selected Location:</h2>
    <h3><%= @facade.location_name %></h3>
    <% @facade.location_budgets(current_user.ynab_budget_id).each do |budget| %>
      <p>You have <%= number_to_currency(budget.balance) %> left in your <%= budget.name %> budget</p>
    <% end %>
  <% end %>
</div>
<div>
<h2> My Phone Number: <%= current_user.phone_number %> </h2>
<%= link_to "Update My Phone Number", edit_user_path(current_user)%>
</div>
<%= link_to "Update My Daily Notifications", preferences_path %>
