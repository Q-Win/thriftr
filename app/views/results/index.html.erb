<%= render "partials/nav" %>

<div class="locations">
  <h2>Select Your Current Location</h2>
  <% if @facade.locations.size > 0 %>
    <% @facade.locations.each do |location| %>
      <div class="location">
        <p><%= link_to location.name, dashboard_path, class: "location-link" %></p>
      </div>
    <% end %>
  <% else %>
    <p>No Locations Detected Nearby</p>
  <% end %>
</div>
